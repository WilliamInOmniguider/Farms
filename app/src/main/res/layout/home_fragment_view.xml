<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_fragment_view_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/home_fragment_view_action_bar"
        layout="@layout/farm_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_fragment_view_action_bar"
        android:orientation="vertical"
        android:weightSum="5">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">

            <android.support.v4.view.ViewPager
                android:id="@+id/home_fragment_view_vp_farm_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.design.widget.TabLayout
                android:id="@+id/home_fragment_view_tl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/pager_indicator_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/gradient_black"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="@color/default_background_color"
            android:orientation="vertical"
            android:paddingTop="@dimen/default_padding">

            <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:paddingLeft="@dimen/default_padding"-->
            <!--android:paddingRight="@dimen/default_padding"-->
            <!--android:text="Farms"-->
            <!--android:textColor="#626356"-->
            <!--android:textSize="24sp"-->
            <!--android:textStyle="bold" />-->

            <android.support.design.widget.TabLayout
                android:id="@+id/home_fragment_view_tl_farm_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="5dp"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabPaddingEnd="0dp"
                app:tabPaddingStart="0dp" />

            <com.omni.newtaipeifarm.view.OmniViewPager
                android:id="@+id/home_fragment_view_vp_farm_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:slide_paging_enabled="false" />

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>